.hotsite
  margin: 120px 0;

  > h1
    margin-bottom: 0;

  > p
    margin-bottom: 24px;
    text-align: center;

    a
      color: #3a3a3a;
      text-decoration: underline;
      font-weight: 400;
      font-size: 12px;
      line-height: 140%;

  table
    margin: 0 auto;
    border-collapse: collapse;

    th, td
      padding: 12px;
      width: calc((100% / 6));
      color: $secondary;
      text-align: left;
      border-block: 1px solid #EEEEEE;

      a
        color: $primary;

    tbody
      > tr
        &:nth-child(2n+1)
          background: #fafafa;