.privacy
  margin: 120px 0;

  article
    > p
      margin-bottom: 12px;
      color: #000;
      font-size: 16px;
      line-height: 140%;

    ul
      margin-bottom: 24px;

      li
        padding: 12px 0;
        list-style: none;

        &:not(:last-child)
          border-bottom: 1px solid #000;

        h2
          display: flex;
          justify-content: space-between;
          align-items: center;
          font-weight: 500;
          font-size: 18px;
          line-height: 140%;
          transition: $transition;

          &:before
            position: absolute;
            left: 0;
            visibility: hidden;
            color: $primary;
            content: ">";
            opacity: 0;

            @media (max-width: 1330px)
              left: 12px;

          &:after
            content: "+";

          &.active
            padding: 0 12px;

            &:before
              visibility: visible;
              opacity: 1;

            &:after
              content: "-";

        p
          overflow: hidden;
          padding-left: 12px;
          max-height: 0;
          color: #333;
          transition: $transition;
