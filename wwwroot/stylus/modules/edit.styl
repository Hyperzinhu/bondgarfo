.edit
  margin: 120px 0;

  > a
    color: $primary;
    font-weight: 500;
    font-size: 16px;

  form
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-end;
    margin-bottom: 24px;
    width: 100%;
    gap: 12px 30px;

    > div
      position: relative;
      display: flex;
      flex: 0 0 calc(100% / 3 - 20px);
      flex-direction: column;

      label
        margin-bottom: 4px;
        color: #000000;
        font-weight: 700;
        font-size: 14px;
        line-height: 140%;

      span
        position: absolute;
        top: 100%;
        left: 4px;
        margin-top: 2px;
        color: red;
        white-space: nowrap;
        font-size: 10px;
        line-height: 12px;

    input
      padding: 0;
      height: 40px;

      &:focus
        outline: 1px solid $secondary;
        border: none;

    input:not([type="submit"]), select
      padding: 0 12px;
      height: 40px;
      border: 1px solid #eaeaea;
      border-radius: 5px;
      background: #fefefe;

    input[type="submit"]
      width: 80px;
      border: 1px solid $secondary;
      border-radius: 5px;
      background: $secondary;
      color: #ffffff;
      font-weight: 500;
      font-size: 14px;
      cursor: pointer;
      transition: $transition;

      &:hover
        border-color: $primary;
        background: $primary;
        color: $secondary;