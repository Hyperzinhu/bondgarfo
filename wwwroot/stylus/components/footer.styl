footer
  position: relative;
  padding: 30px 0 60px;
  background: #ffffff;

  &:before
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-image: $gradient;
    content: "";

.copyright
  text-align: center;
  font-weight: 400;
  font-size: 12px;
  line-height: 140%;

  a
    color: $secondary;
    text-decoration: none;
    font-weight: 500;
    transition: $transition;

    &:hover
      color: $primary;
      text-decoration: underline;