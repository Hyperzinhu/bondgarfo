.details
  margin: 120px 0;

  h1
    > span
      color: $primary;

  dl
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-bottom: 24px;

    dt, dd
      padding: 12px 0;
      line-height: 24px;

    dt
      flex: 0 0 calc((100% / 6));
      color: #000000;
      font-weight: 700;
      font-size: 16px;

    dd
      flex: 0 0 calc(100% / 12 * 10);
      font-weight: 500;
      font-size: 14px;

  > a
    color: $primary;
    font-weight: 500;
    font-size: 16px;

  h2
    font-weight: 400;
    font-size: 16px;
    line-height: 140%;

  ul
    margin-bottom: 24px;
    list-style: none;

    li
      font-weight: 500;
      font-size: 14px;

      &:before
        content: ">";
