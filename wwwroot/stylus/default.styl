.container-fluid
  @extend $container;

h1
  margin-bottom: 12px;
  color: $secondary;
  text-align: center;
  font-weight: 500;
  font-size: 30px;
  line-height: 140%;

img
  display: block;

::selection
  background: $primary;
  color: $secondary;

::-webkit-scrollbar
  width: 5px;
  height: 8px;
  background-color: #eaeaea;

::-webkit-scrollbar-thumb
  border-radius: 8px;
  background: $secondary;

.home
  height: 900px;