header
  position: sticky;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: auto;
  background: #ffffff;
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);

  .container-fluid
    @extend $container;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;

    @media (max-width: 1330px)
      padding: 12px;

    img
      max-width: 180px;

  .navbar-nav
    display: flex;
    align-items: center;
    gap: 24px;

    .nav-link
      color: #000000;
      text-decoration: none;
      font-weight: 500;
      font-size: 18px;
      transition: $transition;

      &:hover
        color: $primary;
        text-decoration: underline;
